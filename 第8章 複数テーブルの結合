//8-1 古い家計簿テーブル(テーブル 8-1)の場合
UPDATE 家計簿
SET 費目 = '給与手当'
WHERE 費目 = '給料'

//8-2 新しい家計簿テーブル(テーブル8-2、テーブル8-3)の場合
UPDATE 費目
SET 名前 = '給与手当'
WHERE 名前 = '給料'

//8-3 矛盾した状態を生むテーブル更新
UPDATE 家計簿
SET 費目 = '雑収入', メモ = '宝くじに当たった'
WHERE 日付 = '2018-02-10'

//8-4 図8-3の結合を実現するためのSELECT文
SELECT 日付, 名前 AS 費目, メモ
FROM 家計簿
JOIN 費目         -- 結合する他の表を指定
ON 家計簿.費目ID = 費目.ID    --結合条件を指定